{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Backend",
      "type": "shell",
      "command": "${workspaceFolder}\\backend\\venv\\Scripts\\python.exe",
      "args": ["manage.py", "runserver"],
      "options": { "cwd": "${workspaceFolder}\\backend" },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Run Frontend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": { "cwd": "${workspaceFolder}\\frontend" },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start All",
      "dependsOn": ["Run Backend", "Run Frontend"],
      "dependsOrder": "parallel"
    }
  ]
}
